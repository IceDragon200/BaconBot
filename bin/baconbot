#!/usr/bin/env ruby
require 'bacon_bot'
require 'yaml'
require 'optparse'

options = {
  root: File.dirname(__FILE__),
  config_file: File.expand_path('../config.yml', File.dirname(__FILE__))
}

argv = OptionParser.new do |opts|
  opts.on '-r', '--root PATH', String, 'Set the bot root path' do |v|
    options[:root] = v
  end

  opts.on '-c', '--config-file FILENAME', String, 'Load config file' do |v|
    options[:config_file] = v
  end

  opts.on '-h', '--help', 'Displays help message' do
    puts opts
    exit
  end
end.parse(ARGV)

config = YAML.load_file config_file
bot = TeamBacon::Bot.new options[:root], config
bot.start
